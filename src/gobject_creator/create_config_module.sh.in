#!/bin/sh

datarootdir=$1
goctemplatedir=$datarootdir/@PACKAGE@/templates

first_line="X"

writeln() {

    if [ "$first_line" != "X" ]; then     
        echo $1 >> config.py
    else
        echo $1 > config.py
        first_line=""
    fi
    
}

writeln "# This module has been generated by autotools"
writeln "# --- Do not change it manually! ---"
writeln ""
writeln "_TEMPLATE_ROOT = \"${goctemplatedir}\""
